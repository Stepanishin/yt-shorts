# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shorts-generator

# OpenAI
OPENAI_API_KEY=sk-proj-...

# Cloudflare R2 (хранилище видео и музыки)
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_R2_BUCKET_NAME=shorts-videos

# Remotion Lambda (рендеринг видео в AWS)
REMOTION_AWS_ACCESS_KEY_ID=your-aws-access-key
REMOTION_AWS_SECRET_ACCESS_KEY=your-aws-secret
REMOTION_AWS_REGION=us-east-1

# YouTube API
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REFRESH_TOKEN=your-refresh-token

# Авторизация
# Сгенерировать хеш: npx bcrypt-cli hash "your-password" 10
AUTH_PASSWORD_HASH=$2a$10$...your-bcrypt-hash
JWT_SECRET=your-random-secret-string-at-least-32-characters-long

# Музыка (выбрать сервис)
MUSIC_SERVICE=youtube_library
# SUNO_API_KEY=your-suno-key (опционально)
# EPIDEMIC_API_KEY=your-epidemic-key (опционально)

# Приложение
NEXT_PUBLIC_APP_URL=http://localhost:3000

